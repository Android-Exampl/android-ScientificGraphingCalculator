<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
   xmlns:android="http://schemas.android.com/apk/res/android"
   android:orientation="vertical"
   android:layout_width="fill_parent"
   android:layout_height="fill_parent" 
   android:minHeight="400dp"
   >
  <LinearLayout
     android:orientation="horizontal"
     android:layout_width="fill_parent"
     android:layout_height="fill_parent" 
     android:layout_weight="1"
     android:background="@drawable/options_list_item">
    <TextView
       android:id="@+id/options_round1"
       android:layout_width="fill_parent"
       android:layout_height="fill_parent" 
       android:textSize="20sp"
       android:layout_weight="0.8"
       android:clickable="true"
       android:padding="3dp"
       android:text="Rounding" />
    <TextView
       android:id="@+id/options_round2"
       android:layout_width="fill_parent"
       android:layout_height="fill_parent" 
       android:layout_weight="1"
       android:clickable="true"
       android:text="" />
    <EditText
       android:id="@+id/options_round3"
       android:layout_width="fill_parent"
       android:layout_height="fill_parent"
       android:layout_weight="1"
       android:inputType="number"
       android:textSize="18sp" />       
  </LinearLayout>
  <LinearLayout
     android:orientation="horizontal"
     android:layout_width="fill_parent"
     android:layout_height="fill_parent" 
     android:layout_weight="1"
     android:background="@drawable/options_list_item">
    <TextView
       android:id="@+id/options_angle1"
       android:layout_width="fill_parent"
       android:layout_height="fill_parent" 
       android:textSize="20sp"
       android:layout_weight="0.8"
       android:clickable="true"
       android:padding="3dp"
       android:text="Deg/Rad" />
    <TextView
       android:id="@+id/options_angle2"
       android:layout_width="fill_parent"
       android:layout_height="fill_parent" 
       android:layout_weight="1"
       android:clickable="true"
       android:text="" />
    <TextView
       android:id="@+id/options_angle3"
       android:layout_width="fill_parent"
       android:layout_height="fill_parent"
       android:layout_weight="1"
       android:clickable="true"
       android:textSize="18sp"
       android:text="" />       
  </LinearLayout>
  <LinearLayout
     android:orientation="horizontal"
     android:layout_width="fill_parent"
     android:layout_height="fill_parent" 
     android:layout_weight="0.2">
  </LinearLayout>
</LinearLayout>
