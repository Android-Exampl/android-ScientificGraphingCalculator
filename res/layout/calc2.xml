<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
   xmlns:android="http://schemas.android.com/apk/res/android"
   android:orientation="vertical"
   android:layout_width="match_parent"
   android:layout_height="match_parent" >
  <LinearLayout
     android:orientation="horizontal"
     android:layout_width="fill_parent"
     android:layout_height="fill_parent"
     android:layout_weight="1">
    <view
       class="com.threeDBJ.calcAppLib.NoImeEditText"
       android:id="@+id/io"
       android:layout_gravity="center"
       android:layout_width="fill_parent"
       android:layout_height="fill_parent"
       android:layout_weight="0.95"
       android:background="@drawable/input"
       android:padding="3dp"
       android:inputType="none"
       android:textSize="22sp"/>
    <Button
       android:id="@+id/left"
       android:layout_width="fill_parent"
       android:layout_height="fill_parent"
       android:layout_weight="1.7"
       android:background="@drawable/left"
       android:text="" />
    <Button
       android:id="@+id/right"
       android:layout_width="fill_parent"
       android:layout_height="fill_parent"
       android:layout_weight="1.7"
       android:background="@drawable/right"
       android:text="" />
    <Button
       android:id="@+id/shift"
       android:layout_width="fill_parent"
       android:layout_height="fill_parent"
       android:layout_weight="1.7"
       android:text="shift"
       android:background="@drawable/shift1"/>
    <Button
       android:id="@+id/copy"
       android:layout_width="fill_parent"
       android:layout_height="fill_parent"
       android:layout_weight="1.7"
       android:textSize="16sp"
       android:text="copy" />
  </LinearLayout>
  <LinearLayout
     android:orientation="horizontal"
     android:layout_width="fill_parent"
     android:layout_height="fill_parent"
     android:layout_weight="1">
    <Button
       android:id="@+id/del"
       android:layout_width="fill_parent"
       android:layout_height="fill_parent"
       android:layout_weight="1"
       android:textSize="18sp"
       android:text="bspc" />
    <Button
       android:id="@+id/clr"
       android:layout_width="fill_parent"
       android:layout_height="fill_parent"
       android:layout_weight="1"
       android:textSize="20sp"
       android:text="clr" />
    <Button
       android:id="@+id/ln"
       android:layout_width="fill_parent"
       android:layout_height="fill_parent"
       android:layout_weight="1"
       android:textSize="20sp"
       android:text="ln" />
    <Button
       android:id="@+id/seven"
       android:layout_width="fill_parent"
       android:layout_height="fill_parent"
       android:layout_weight="0.9"
       android:textSize="20sp"
       android:text="7"
       android:textColor="#EEEEEEEE"
       android:background="@drawable/btn_default_holo_dark" />
    <Button
       android:id="@+id/eight"
       android:layout_width="fill_parent"
       android:layout_height="fill_parent"
       android:layout_weight="0.9"
       android:textSize="20sp"
       android:text="8"
       android:textColor="#EEEEEEEE"
       android:background="@drawable/btn_default_holo_dark" />
    <Button
       android:id="@+id/nine"
       android:layout_width="fill_parent"
       android:layout_height="fill_parent"
       android:layout_weight="0.9"
       android:textSize="20sp"
       android:text="9"
       android:textColor="#EEEEEEEE"
       android:background="@drawable/btn_default_holo_dark" />
    <Button
       android:id="@+id/plus"
       android:layout_width="fill_parent"
       android:layout_height="fill_parent"
       android:layout_weight="1"
       android:textSize="22sp"
       android:text="+" />
  </LinearLayout>
  <LinearLayout
     android:orientation="horizontal"
     android:layout_width="fill_parent"
     android:layout_height="fill_parent"
     android:layout_weight="1">
    <Button
       android:id="@+id/recip"
       android:layout_width="fill_parent"
       android:layout_height="fill_parent"
       android:layout_weight="1"
       android:textSize="17sp"
       android:text="1/x" />
    <Button
       android:id="@+id/sqr"
       android:layout_width="fill_parent"
       android:layout_height="fill_parent"
       android:layout_weight="1"
       android:textSize="16sp"
       android:text="sqr" />
    <Button
       android:id="@+id/pwr"
       android:layout_width="fill_parent"
       android:layout_height="fill_parent"
       android:layout_weight="1"
       android:textSize="20sp"
       android:text="^" />
    <Button
       android:id="@+id/four"
       android:layout_width="fill_parent"
       android:layout_height="fill_parent"
       android:layout_weight="0.9"
       android:textSize="20sp"
       android:text="4" 
       android:textColor="#EEEEEEEE"
       android:background="@drawable/btn_default_holo_dark" />
    <Button
       android:id="@+id/five"
       android:layout_width="fill_parent"
       android:layout_height="fill_parent"
       android:layout_weight="0.9"
       android:textSize="20sp"
       android:text="5"
       android:textColor="#EEEEEEEE"
       android:background="@drawable/btn_default_holo_dark" />
    <Button
       android:id="@+id/six"
       android:layout_width="fill_parent"
       android:layout_height="fill_parent"
       android:layout_weight="0.9"
       android:textSize="20sp"
       android:text="6"
       android:textColor="#EEEEEEEE"
       android:background="@drawable/btn_default_holo_dark" />
    <Button
       android:id="@+id/minus"
       android:layout_width="fill_parent"
       android:layout_height="fill_parent"
       android:layout_weight="1"
       android:textSize="20sp"
       android:text="-" />
  </LinearLayout>
  <LinearLayout
     android:orientation="horizontal"
     android:layout_width="fill_parent"
     android:layout_height="fill_parent"
     android:layout_weight="1">
    <Button
       android:id="@+id/euler"
       android:layout_width="fill_parent"
       android:layout_height="fill_parent"
       android:layout_weight="1"
       android:textSize="20sp"
       android:text="e" />
    <Button
       android:id="@+id/pie"
       android:layout_width="fill_parent"
       android:layout_height="fill_parent"
       android:layout_weight="1"
       android:textSize="18sp"
       android:text="pi" />
    <Button
       android:id="@+id/eye"
       android:layout_width="fill_parent"
       android:layout_height="fill_parent"
       android:layout_weight="1"
       android:textSize="22sp"
       android:text="i" />
    <Button
       android:id="@+id/one"
       android:layout_width="fill_parent"
       android:layout_height="fill_parent"
       android:layout_weight="0.9"
       android:textSize="20sp"
       android:text="1"
       android:textColor="#EEEEEEEE"
       android:background="@drawable/btn_default_holo_dark" />
    <Button
       android:id="@+id/two"
       android:layout_width="fill_parent"
       android:layout_height="fill_parent"
       android:layout_weight="0.9"
       android:textSize="20sp"
       android:text="2"
       android:textColor="#EEEEEEEE"
       android:background="@drawable/btn_default_holo_dark" />
    <Button
       android:id="@+id/three"
       android:layout_width="fill_parent"
       android:layout_height="fill_parent"
       android:layout_weight="0.9"
       android:textSize="20sp"
       android:text="3"
       android:textColor="#EEEEEEEE"
       android:background="@drawable/btn_default_holo_dark" />
    <Button
       android:id="@+id/mult"
       android:layout_width="fill_parent"
       android:layout_height="fill_parent"
       android:layout_weight="1"
       android:textSize="20sp"
       android:text="*" />
  </LinearLayout>
  <LinearLayout
     android:orientation="horizontal"
     android:layout_width="fill_parent"
     android:layout_height="fill_parent"
     android:layout_weight="1">
    <Button
       android:id="@+id/equals"
       android:layout_width="fill_parent"
       android:layout_height="fill_parent"
       android:layout_weight="0.925"
       android:textSize="20sp"
       android:text="="
       android:background="@drawable/btn_blue" />
    <Button
       android:id="@+id/E"
       android:layout_width="fill_parent"
       android:layout_height="fill_parent"
       android:layout_weight="1"
       android:textSize="19sp"
       android:text="E" />
    <Button
       android:id="@+id/point"
       android:layout_width="fill_parent"
       android:layout_height="fill_parent"
       android:layout_weight="1"
       android:textSize="18sp"
       android:text="." />
    <Button
       android:id="@+id/zero"
       android:layout_width="fill_parent"
       android:layout_height="fill_parent"
       android:layout_weight="0.95"
       android:textSize="20sp"
       android:text="0"
       android:textColor="#EEEEEEEE"
       android:background="@drawable/btn_default_holo_dark" />
    <Button
       android:id="@+id/sign"
       android:layout_width="fill_parent"
       android:layout_height="fill_parent"
       android:layout_weight="1"
       android:textSize="18sp"
       android:text="(-)" />
    <Button
       android:id="@+id/div"
       android:layout_width="fill_parent"
       android:layout_height="fill_parent"
       android:layout_weight="1"
       android:textSize="20sp"
       android:text="/" />
  </LinearLayout>
  <LinearLayout
     android:orientation="horizontal"
     android:layout_width="fill_parent"
     android:layout_height="fill_parent"
     android:layout_weight="1">
    <Button
       android:id="@+id/last"
       android:layout_width="fill_parent"
       android:layout_height="fill_parent"
       android:layout_weight="1"
       android:textSize="18sp"
       android:text="last" />
    <Button
       android:id="@+id/ans"
       android:layout_width="fill_parent"
       android:layout_height="fill_parent"
       android:layout_weight="1"
       android:textSize="18sp"
       android:text="ans" />
    <Button
       android:id="@+id/lParen"
       android:layout_width="fill_parent"
       android:layout_height="fill_parent"
       android:layout_weight="1"
       android:textSize="18sp"
       android:text="(" />
    <Button
       android:id="@+id/rParen"
       android:layout_width="fill_parent"
       android:layout_height="fill_parent"
       android:layout_weight="1"
       android:textSize="18sp"
       android:text=")" />
    <Button
       android:id="@+id/sin"
       android:layout_width="fill_parent"
       android:layout_height="fill_parent"
       android:layout_weight="1"
       android:textSize="18sp"
       android:text="sin" />
    <Button
       android:id="@+id/cos"
       android:layout_width="fill_parent"
       android:layout_height="fill_parent"
       android:layout_weight="1"
       android:textSize="18sp"
       android:text="cos" />
    <Button
       android:id="@+id/tan"
       android:layout_width="fill_parent"
       android:layout_height="fill_parent"
       android:layout_weight="1"
       android:textSize="18sp"
       android:text="tan" />
  </LinearLayout>
  <Button
       android:id="@+id/percent"
       android:layout_width="fill_parent"
       android:layout_height="fill_parent"
       android:layout_weight="1"
       android:textSize="22sp"
       android:visibility="gone"
       android:text="%" />
</LinearLayout>
